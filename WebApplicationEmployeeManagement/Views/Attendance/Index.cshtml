@model List<DAL.Models.Attendance>
@{
    ViewBag.Title ="Index";
}

<h2>Index</h2>

<a asp-controller="Attendance" asp-action="CreateAttendance">Create New Attendance</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Time Attendance</th>
            <th>Time Leave</th>
            <th>Employee Name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TimeAttendance</td>
                <td>@item.TimeLeave</td>
                <td>@item.Employees.Name</td>

                <td>
                    <a class="btn btn-warning" asp-action="EditAttendance" asp-route-id="@item.Id">Edit</a>
                </td>

                <td>
                    <a class="btn btn-danger" asp-action="DeleteAttendance" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



<ul class="pagination">
    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
   
    <li class="page-item"><a class="page-link" href="#">Next</a></li>
</ul>