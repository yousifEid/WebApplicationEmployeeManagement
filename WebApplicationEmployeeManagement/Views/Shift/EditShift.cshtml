@model DAL.Models.Shift
@{
    ViewBag.Title = "EditShift";
}

<h2>Edit Shift</h2>

<form asp-controller="Shift" asp-action="ModifyShift" method="post">
    @Html.HiddenFor(m=>m.Id)
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label>Name</label>
        <input type="text" asp-for="ShiftName" class="form-control" />
        <span class="text-danger" asp-validation-for="ShiftName"></span>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-info">Update</button>
    </div>
</form>