@model List<DAL.Models.Shift>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<a asp-controller="Shift" asp-action="CreateShift">Create New Shift</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Shift name</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ShiftName</td>

                <td>
                    <a class="btn btn-warning" asp-action="EditShift" asp-route-id="@item.Id">Edit</a>
                </td>

                <td>
                    <a class="btn btn-danger" asp-action="DeleteShift" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>
