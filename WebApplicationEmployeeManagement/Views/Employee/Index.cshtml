@model List<DAL.Models.Employees>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<a asp-controller="Employee" asp-action="CreateEmployee">Create New Employee</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>IdNumber</th>
            <th>Photo</th>
            <th>JobTitle</th>
            <th>Gender</th>
            <th>Mail</th>
            <th>Telephone</th>
            <th>IdJob</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.IdNumber</td>
                <td>
                    <img src="@item.Photo" height="100"/>
                </td>
                <td>@item.JobTitle</td>
                <td>@item.Gender</td>
                <td>@item.Mail</td>
                <td>@item.Tel</td>
                <td>@item.IdJob</td>

                <td>
                    <a class="btn btn-warning" asp-action="EditEmployee" asp-route-id="@item.Id">Edit</a>
                </td>

                <td>
                    <a class="btn btn-danger" asp-action="DeleteEmployee" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>